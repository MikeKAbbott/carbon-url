{
  "manifest_version": 2,
  "name": "Carbon URL",
  "homepage_url": "http://localhost:8080/",
  "description": "A Vue Browser Extension",
  "default_locale": "en",
  "permissions": [
    "activeTab",
    "<all_urls>",
    "*://*/*"
  ],
  "icons": {
    "16": "icons/carbon-url-logo-16.png",
    "48": "icons/carbon-url-logo-48.png",
    "128": "icons/carbon-url-logo-128.png"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "__MSG_extName__",
    "default_icon": {
      "19": "icons/carbon-url-logo-19.png",
      "48": "icons/carbon-url-logo-48.png"
    }
  }
}
